        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ASY_HR_Depatment.WPFClient.Forms"
        mc:Ignorable="d"
        Title="MenuWindow" Height="450" Width="800">
    <Grid>
        <!-- // track-->

        <StackPanel Margin="10">

            <Button Margin="5"
                    Name="btnAddGroup"
                    Click="btnAddGroup_Click"
                    >Добавить  группу</Button>
            
            <Button Margin="5"
                    Name="btnAddStudetn"
                    Click="btnAddStudetn_Click"
                    >Добавить  Студента</Button>


            <Button Margin="5"
                    Name="btnSelectGroup"
                    Click="btnSelectGroup_Click"
                    >Просмотреть  список групп</Button>

            <Button Margin="5"
                     Name="btnSelecStudent"
                    Click="btnSelecStudent_Click"
                     >Просмотреть  список студентов</Button>        


        </StackPanel>
        
    </Grid>
</Window>

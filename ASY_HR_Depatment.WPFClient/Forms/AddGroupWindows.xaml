<Window x:Class="ASY_HR_Depatment.WPFClient.Forms.AddGroupWindows"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ASY_HR_Depatment.WPFClient.Forms"
        mc:Ignorable="d"
        Title="Добавить новую группу" Height="450" Width="800">
    <Grid>
        <!-- // track-->

        <StackPanel Margin="5" HorizontalAlignment="Center">

            <StackPanel Margin="5" Orientation="Horizontal">
                <TextBlock
                       Margin="5"
                       >Введите  название  новой группы:</TextBlock>
                <TextBox 
                       x:Name="tb_name_Group"
                       MinWidth="100"
                       Margin="5"></TextBox>

            </StackPanel>



            <StackPanel Margin="5" Orientation="Horizontal">

                <Button Margin="5" 
                Name="btn_add_group"
                Click="btn_add_group_Click"
                Padding="5">Добавить группу в БД</Button>
            </StackPanel>



        </StackPanel>


    </Grid>
</Window>
